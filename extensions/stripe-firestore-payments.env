# Stripe Extension Configuration
# You'll need to fill these in after setting up your Stripe account

# Required: Your Stripe Secret Key (starts with sk_test_ for test mode, sk_live_ for live mode)
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here

# Required: Webhook endpoint secret for securing webhook requests
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Optional: Stripe customers collection name (default: customers)
CUSTOMERS_COLLECTION=customers

# Optional: Stripe products collection name (default: products) 
PRODUCTS_COLLECTION=products

# Optional: Automatically delete Stripe customer when Firebase user is deleted (default: false)
DELETE_STRIPE_CUSTOMERS=true

# Optional: Set custom claims on user tokens based on subscription status (default: false)
SET_CUSTOM_CLAIMS=true

# Optional: Create customers for existing users (default: false)
CREATE_CUSTOMERS_FOR_EXISTING_USERS=false

# Optional: Sync existing Stripe users to Firestore (default: false)
SYNC_EXISTING_USERS=false