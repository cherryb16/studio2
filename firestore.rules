rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user data
    match /snaptrade_users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Stripe customer data - users can only access their own
    match /customers/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // Allow users to create checkout sessions
      match /checkout_sessions/{id} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Allow users to read their subscriptions
      match /subscriptions/{id} {
        allow read: if request.auth != null && request.auth.uid == uid;
      }
      
      // Allow users to read their payments
      match /payments/{id} {
        allow read: if request.auth != null && request.auth.uid == uid;
      }
    }
    
    // Products and prices are public (read-only)
    match /products/{id} {
      allow read: if true;
      
      match /prices/{id} {
        allow read: if true;
      }
    }
  }
}